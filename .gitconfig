[core]
	editor = nvim

# from https://bitbucket.org/durdn/cfg/src/master/.gitconfig?fileviewer=file-view-default
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = red reverse
    local = blue
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[pull]
	rebase = false
